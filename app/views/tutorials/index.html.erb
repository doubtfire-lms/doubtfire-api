<%- model_class = Tutorial.new.class -%>
<div class="page-header">
  <h1><%=t '.title', default:  model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:unit_id) %></th>
      <th>Tutor</th>
      <th><%= model_class.human_attribute_name(:meeting_day) %></th>
      <th><%= model_class.human_attribute_name(:meeting_time) %></th>
      <th><%= model_class.human_attribute_name(:meeting_location) %></th>
      <th><%=t '.actions', default:  t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @tutorials.each do |tutorial| %>
      <tr>
        <td><%= link_to tutorial.id, tutorial_path(tutorial) %></td>
        <td><%= Unit.find(tutorial.unit_id).name %></td>
        <td><%= User.find(tutorial.user_id).first_name %> <%= User.find(tutorial.user_id).last_name %></td>
        <td><%= tutorial.meeting_day %></td>
        <td><%= tutorial.meeting_time %></td>
        <td><%= tutorial.meeting_location %></td>
        <td>
          <%= link_to t('.edit', default:  t("helpers.links.edit")),
                      edit_tutorial_path(tutorial), class:  'btn btn-mini' %>
          <%= link_to t('.destroy', default:  t("helpers.links.destroy")),
                      tutorial_path(tutorial),
                      method:  :delete,
                      data:  { confirm:  t('.confirm', default:  t("helpers.links.confirm", default:  'Are you sure?'))},
                      class:  'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default:  t("helpers.links.new")),
            new_tutorial_path,
            class:  'btn btn-primary' %>
